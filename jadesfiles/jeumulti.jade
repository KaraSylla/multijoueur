              li
                img(class="layvinKurzawa" src='kurzawa_layvin.jpg', alt='kurzawa layvin')
              li
                img(class="lucasMoura" src='lucas_moura.jpg', alt='lucas moura')
              li
                img(class="marquinhos" src='marquinhos.jpg', alt='marquinhos')
              li
