doctype html
html
  // Début balise html
  head
    // Début balise header
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Jeu multijoueur Psg - start
    link(rel='stylesheet', href='style.css', media='screen', title='style par défaut')
  // Fin balise header
  body
    // Début balise body
    #container
      // Début div #container
      header
        // Début balise header
        div
          .headerDivLeft
            img#logo(src='logo.png', alt='logo du psg', title='Paris saint germains')
          .headerDivRight
            .info-joueur
              h1
                span
                  img(src='#{avatar}', name='', title='avatar', alt='avatar')
                h1= pseudo
              a(href='/', title='se déconnecter') déconnexion
        nav
          ul
            li
              span.menuJeu(href='jeumulti') Jouer
      // Fin balise header
      section
        // Début balise section
        .background-jeu
          .affiche-resultat
            h2 Résultat :
            h3 Score
            p#Joueur1 Joueur1
              p#resultat1
            p#Joueur2 Joueur2
              p#resultat2
            h3 Tour restant
            p#tour-restant nbr du tour
            h3 Victoire
            p#victoire1 affiche les victoires
              p#affichevictoire1
            p#victoire2 affiche les victoires
              p#affichevictoire2
            h3 Durée de la partie
            p#temps-de-jeu temps de jeu actif
          .zone-de-jeu
            ul.cible
              .vs
                p#JoueursCo Joueurs connectés :
                p trouve le plus rapidement possible: {{question-jeu}}
              .cache
                div
                  input#btn(type='button', value='défier')
                  input#btnAccepter(type='button', value='accepter')
              li
                img(class="diMaria" src='di-maria_angel.jpg', alt='di maria angel')
              li
                img(class="sergeAurier" src='aurier_serge.jpg', alt='aurier serge')
              li
